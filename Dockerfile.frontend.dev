FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY frontend/package.json frontend/package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source code
COPY frontend/ .

# Create .env.local with default values
RUN echo "NEXT_PUBLIC_API_URL=http://localhost:8000" > .env.local && \
    echo "NEXT_PUBLIC_APP_NAME=Vibr" >> .env.local

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"] 